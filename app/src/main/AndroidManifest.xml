<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jessexx.panic">

    <application
        android:name=".Activities.PanicApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Activities.LoginActivity"
            android:label="Login"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.ActionBar.Transparent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Activities.UserAssetActivity"
            android:label="UserAssetActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoToolBar">
        </activity>

        <activity
            android:name=".Activities.AssetAddActivity"
            android:label="AssetAddActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name=".Activities.AssetDetailActivity"
            android:label="AssetDetailActivity"
            android:parentActivityName=".Activities.UserAssetActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
        </activity>

    </application>
</manifest>