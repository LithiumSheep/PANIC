<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/asset_image"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_below="@id/spinner"
            android:background="#CCCCCC"
            android:src="@drawable/ic_camera"
            android:scaleType="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="12dp" />

        <TextView
            android:id="@+id/asset_name_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/asset_image"
            android:layout_toRightOf="@id/asset_image"
            android:text="ASSET NAME" />

        <EditText
            android:id="@+id/asset_name_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/asset_name_label"
            android:layout_toRightOf="@id/asset_image" />

        <TextView
            android:id="@+id/year_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/asset_name_edittext"
            android:layout_toRightOf="@id/asset_image"
            android:text="YEAR" />

        <EditText
            android:id="@+id/year_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/year_label"
            android:layout_toRightOf="@id/asset_image" />

        <TextView
            android:id="@+id/location_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/asset_image"
            android:text="LOCATION" />

        <EditText
            android:id="@+id/location_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/location_label" />

        <TextView
            android:id="@+id/condition_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/location_edittext"
            android:text="CONDITION" />

        <EditText
            android:id="@+id/condition_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/condition_label" />

        <TextView
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/condition_edittext"
            android:background="@color/colorPrimary"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="24dp"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:textColor="@android:color/white"
            android:text="SAVE" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/save_button"
            android:layout_alignTop="@id/save_button"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:textColor="@color/md_material_blue_600"
            android:text="CANCEL" />
    </RelativeLayout>
</ScrollView>